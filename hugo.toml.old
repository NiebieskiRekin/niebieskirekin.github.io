baseURL = 'https://tpawlowski.live'
languageCode = 'pl'
defaultContentLanguage = 'pl'
title = 'My website'
enableEmoji = true
ignoreErrors = ["additional-script-loading-error"]

[module]
# workspace = "hugo-blog-awesome.work"
# [module.hugoVersion]
# extended = true
# min = "0.87.0"
[[module.imports]]
path = "github.com/hugo-sid/hugo-blog-awesome"

##### ENGLISH

[Languages.en-gb]
languageName = "English"
languageCode = "en"
contentDir = "content/en"
weight = 1

[Languages.en-gb.menu]
[[Languages.en-gb.menu.main]]
pageRef = "/"
name = 'Home'
url = '/'
weight = 10
[[Languages.en-gb.menu.main]]
pageRef = "projects"
name = 'Projects'
url = '/projects/'
weight = 20
[[Languages.en-gb.menu.main]]
pageRef = "about"
name = 'About'
url = '/about/'
weight = 30

[Languages.en-gb.params]
sitename = "My website"
defaultColor = "auto"
mainSections = ['projects']
toc = true
tocOpen = false
goToTop = true
# additionalScripts = ['js/custom.js', 'js/custom-2.js']
dateFormat = "" # "2 Jan 2006" format

[Languages.en-gb.params.author]
avatar = "avatar.jpg"
intro = "Tomasz Pawłowski"
name = "Tomasz Pawłowski"
description = "Personal site"

# Allow to override webmanifest options
[Languages.en-gb.params.webmanifest]
name = "sitename"         # will use "params.sitename" or "title" by default
short_name = "sitename"   # same as name
start_url = "/"           # will use homepage url by default
theme_color = "#434648"   # default is "#434648" (base color of text). Also will override html `<meta name="theme-color" />`
background_color = "#fff" # by default depend on "params.defaultColor" for "light" or "auto" will be set to "#fff" for dark will be "#131418" (color of dark mode background)
display = "standalone"

##### POLISH

[Languages.pl]
languageName = "Polish"
languageCode = "pl"
contentDir = "content/pl"
weight = 2
[Languages.pl.menu]
[[Languages.pl.menu.main]]
pageRef = "/"
name = 'Strona główna'
url = '/'
weight = 10
[[Languages.pl.menu.main]]
pageRef = "projekty"
name = 'Projekty'
url = '/projects/'
weight = 20
[[Languages.pl.menu.main]]
pageRef = "about"
name = 'O mnie'
url = '/about/'
weight = 30

[Languages.pl.params]
sitename = "Moja strona"
mainSections = ['projekty']
toc = true                  # set to false to disable table of contents 'globally'
tocOpen = false             # set to true to open table of contents by default
goToTop = true              # set to false to disable 'go to top' button
# additionalScripts = ['js/custom.js', 'js/custom-2.js']
dateFormat = "2 January 2006"

[Languages.pl.params.author]
avatar = "avatar.jpg"
intro = "Tomasz Pawłowski"
name = "Tomasz Pawłowski"
description = "Moja strona"

[Languages.pl.params.webmanifest]
name = "sitename"         # will use "params.sitename" or "title" by default
short_name = "sitename"   # same as name
start_url = "/"           # will use homepage url by default
theme_color = "#434648"   # default is "#434648" (base color of text). Also will override html `<meta name="theme-color" />`
background_color = "#fff" # by default depend on "params.defaultColor" for "light" or "auto" will be set to "#fff" for dark will be "#131418" (color of dark mode background)
display = "standalone"


[[params.socialIcons]]
name = "github"
url = "https://github.com/niebieskirekin"


[security]
enableInlineShortcodes = true
